            text: "Lyrion Server (F7)"
            on_release:
                app.root.current = "lyrion"
                root.manager.transition.direction = "left"

        Button:
            pos_hint:{"x": 0., "y":0.3}
            size_hint:0.2,0.1
            text: "about (F8)"
            on_release:
                app.root.current = "about"
                root.manager.transition.direction = "left"

        Button:
            pos_hint:{"x": 0., "y":0.2}
            size_hint:0.2,0.1
